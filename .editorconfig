[*.{kt,kts}]
ktlint_no-wildcard-imports = disabledij_kotlin_packages_to_use_import_on_demand=java.util.* # allow wildcard import from java.util.* and all subpackages
ktlint_disabled_rules=no-wildcard-imports,argument-list-wrapping
indent_size=4
continuation_indent_size=4
max_line_length=500
insert_final_newline=true